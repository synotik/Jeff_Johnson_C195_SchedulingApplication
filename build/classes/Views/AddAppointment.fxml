<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Views.AddAppointmentController">
   <children>
      <Label layoutX="200.0" layoutY="14.0" text="Add Appointment">
         <font>
            <Font name="System Bold Italic" size="24.0" />
         </font>
      </Label>
      <VBox layoutX="104.0" layoutY="49.0" prefHeight="263.0" prefWidth="140.0" spacing="15.0">
         <children>
            <Label text="Customer Name">
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
            <Label text="Date">
               <padding>
                  <Insets top="2.0" />
               </padding>
            </Label>
            <Label text="Start Time">
               <padding>
                  <Insets top="3.0" />
               </padding>
            </Label>
            <Label text="End Time">
               <VBox.margin>
                  <Insets top="2.0" />
               </VBox.margin>
            </Label>
            <Label text="Contact">
               <padding>
                  <Insets top="3.0" />
               </padding>
            </Label>
            <Label text="Location">
               <VBox.margin>
                  <Insets top="4.0" />
               </VBox.margin>
            </Label>
            <Label text="Appointment Type">
               <VBox.margin>
                  <Insets top="3.0" />
               </VBox.margin>
            </Label>
            <Label text="Appointment Description">
               <VBox.margin>
                  <Insets top="3.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <VBox layoutX="268.0" layoutY="49.0" prefHeight="239.0" prefWidth="200.0" spacing="10.0">
         <children>
            <ChoiceBox fx:id="customerBox" prefWidth="175.0" />
            <DatePicker fx:id="dateField" />
            <ChoiceBox fx:id="startBox" prefWidth="175.0" />
            <ChoiceBox fx:id="endBox" prefWidth="175.0" />
            <ChoiceBox fx:id="contactBox" prefWidth="175.0" />
            <ChoiceBox fx:id="locationBox" prefWidth="175.0" />
            <ChoiceBox fx:id="appointmentBox" prefWidth="175.0" />
            <ChoiceBox fx:id="descriptionBox" prefWidth="175.0" />
         </children>
      </VBox>
      <ButtonBar layoutX="168.0" layoutY="330.0" prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button fx:id="submitButton" onAction="#handleSubmitButton" mnemonicParsing="false" text="Submit" />
            <Button fx:id="cancelButton" onAction="#handleCancelButton" mnemonicParsing="false" text="Cancel" />
        </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
